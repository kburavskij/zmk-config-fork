          require-prior-idle-ms = <220>;
          slow-release;
          bindings = <&kp ENTER>;
          key-positions = <LM4 LM3 LM2>;
          layers = <BASE>;
      };

      caps_word {
          timeout-ms = <50>;
          require-prior-idle-ms = <0>;
          bindings = <&caps_word>;
          key-positions = <LM2 LM1 RM1 RM2>;
          layers = <BASE>;
      };

      cut {
          timeout-ms = <40>;
