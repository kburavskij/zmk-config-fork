          slow-release;
          bindings = <&msc SCRL_DOWN>;
          key-positions = <RB1 RB2 RB3>;
          layers = <BASE MSE>;
      };

      escape_left {
          timeout-ms = <40>;
          require-prior-idle-ms = <200>;
          slow-release;
          bindings = <&kp ESC>;
          key-positions = <LT4 LT3>;
          layers = <BASE>;
      };

      softoff {
          timeout-ms = <1000>;
          require-prior-idle-ms = <200>;
          bindings = <&soft_off>;
          key-positions = <LM0 RM0>;
          layers = <FNC>;
      };

      indbat {
          timeout-ms = <100>;
          require-prior-idle-ms = <200>;
          bindings = <&ind_bat>;
          key-positions = <LT2 RT2>;
          layers = <FNC>;
      };

      indcon {
          timeout-ms = <100>;
          require-prior-idle-ms = <200>;
          bindings = <&ind_con>;
          key-positions = <LT1 RT1>;
          layers = <FNC>;
      };
  };